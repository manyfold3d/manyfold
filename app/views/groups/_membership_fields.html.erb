<%= cocooned_item class: "mb-2 input-group" do %>
  <%= f.text_field :user_id,
        class: "form-control",
        placeholder: translate(".user_id.placeholder"),
        value: f.object&.user&.username,
        disabled: f.object.persisted? %>
  <%= cocooned_remove_item_button Icon(icon: "trash", label: translate(".user_id.delete")), f, class: "btn btn-outline-danger" %>
<% end %>
