<p><%= t(".hello", email: @resource.email) %></p>

<p><%= t(".someone_invited_you", url: root_url) %></p>

<p><%= link_to t(".accept"), accept_invitation_url(@resource, invitation_token: @token) %></p>

<% if @resource.invitation_due_at %>
  <p><%= t(".accept_until", due_date: @resource.invitation_due_at.to_date.to_fs(:long_ordinal)) %></p>
<% end %>

<p><%= t(".ignore") %></p>
