<% content_for :items do %>
  <div class="skip-link-container">
    <%= skip_link "sidebar", t(".skip_collections") %>
    <div class="row">
      <div class="col">
        <%= paginate @collections %>
      </div>
      <div class="col col-auto">
        <%= SortMenu(filter: @filter) %>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mb-4">
      <%= render "unassigned" if @unassigned_count > 0 && @collections.first_page? && !(@filter.filtering_by?(:collection) || @filter.filtering_by?(:creator)) %>
      <%= render @collections %>
    </div>
    <%= paginate @collections %>
  </div>
<% end %>

<% content_for :actions do %>
  <%= link_to t("collections.general.new"), new_collection_path, class: "btn btn-primary" if policy(:collection).new? %>
<% end %>

<% content_for :sidebar do %>
  <%= render "filters_card" %>
  <%= render "tags_card" %>
<% end %>
